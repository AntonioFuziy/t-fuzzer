{
  "browser_action": {
    "browser_style": true,
    "default_title": "Security Indicator for Firefox",
    "default_popup": "popup.html"
  },
  "description": "Security Indicator for Firefox.",
  "manifest_version": 2,
  "name": "t-fuzzer",
  "version": "1.0",

  "permissions": ["cookies","<all_urls>","tabs", "storage"],

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/app.js"]
    }
  ]
}
